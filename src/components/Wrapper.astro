---
import Navbar from './Navbar';
import Footer from './Footer';

const { currentPath, fullWidth = false } = Astro.props;
---

<div class='bg-background min-h-screen flex flex-col'>
    {/* client:load is required for the mobile menu toggle to work */}
    <Navbar client:load currentPath={currentPath} />

    <div class='flex-grow py-4'>
        <main>
            <div class={fullWidth ? '' : 'mx-auto max-w-7xl px-4 sm:px-6 lg:px-8'}>
                <slot />
            </div>
        </main>
    </div>

    <Footer />
</div>